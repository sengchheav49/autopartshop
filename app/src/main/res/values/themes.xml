<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Typography -->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Floating Action Button -->
        <item name="floatingActionButtonStyle">@style/AppFloatingActionButtonStyle</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextHeading">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubheading">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCaption">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- FAB Style -->
    <style name="AppFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="SmallCartButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_add_to_cart</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>